<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingActivity"
    android:background="@color/grey"
    android:parentActivityName=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rankingGuidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rankigGuidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rankingGuidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <Spinner
        android:id="@+id/rankingSpinner"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:popupBackground="@color/white"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toStartOf="@id/rankigGuidelineRight"
        app:layout_constraintStart_toStartOf="@id/rankingGuidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/rankingGuidelineTop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ranking_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@id/rankigGuidelineRight"
        app:layout_constraintStart_toStartOf="@id/rankingGuidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/rankingSpinner"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/ranking_item" />


</androidx.constraintlayout.widget.ConstraintLayout>